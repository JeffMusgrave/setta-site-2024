---
import HeroCTA from "./pages/home/HeroCTA.astro";
import Hero from "./sections/Hero.astro";
import ThemeImage from "./ThemeImage.astro";
import SettaSection from "../assets/img/home/setta-section-card.png"
// import AlgoLight from "../assets/img/home/algorithm-light.png"
import HeroBgDark from "../assets/img/home/setta-sections-bg.png"
import { Image } from "astro:assets";
// import HeroBgLight from "../assets/img/home/hero-bg-light.png"
---

<Hero outerClass="hero-section bg-setta-900 relative pt-8 md:pt-36  md:pb-24 overflow-x-clip md:overflow-clip md:shadow-2xl md:shadow-setta-950/50 md:border-b md:border-setta-700 h-[100svh] md:h-[calc(100svh_+_4rem)] flex items-center" innerClass="relative md:-mt-[8rem] z-10 items-center justify-between mx-auto flex gap-2">
  <h1 slot="left-side" class="text-balance">Python Without The Donkeywork</h1>
  <p class="my-0 text-white" slot="left-side">Streamline your code. Skip the boilerplate parsers and frontend. Effortlessly expose your Python functions as a flexible UI. Configure, interact, and share with ease.</p>
  <HeroCTA slot="left-side" />
  <div class="relative hidden lg:block overflow-clip min-w-[300px] min-h-[400px] bg-setta-900/50 rounded-[13px] shadow-xl shadow-setta-950/60 drop-shadow-[0_0px_120px_rgba(59,129,246,0.6)]">

      <video
        class="z-10"
        autoplay
        muted
        playsinline
      >
        <source src="assets/video/hero-card.mp4" type="video/mp4">
        Your browser does not support the video tag.
      </video>
      <Image 
        src="/assets/img/hero-card-static.png"
        alt="setta video placeholder" 
        width={300} 
        height={400} 
        class="absolute inset-0 -z-10 w-full h-full object-cover" 
      />
      
  </div>
  <ThemeImage alt="Setta Cards in the BG"  darkImage={HeroBgDark} width={600} height={568} class="absolute -right-40 -z-10 blur-sm opacity-70 lg:opacity-100 md:blur-[2px]"/>
</Hero>

<style>
  .hero-section::before {
    content: "";
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    background-image: url("data:image/png;base64,");
    background-repeat: repeat;
    background-size: 100px 100px;
    pointer-events: none;
    opacity: 1;
    /* mix-blend-mode: soft-light; */
    z-index: 1;
  }
</style>
