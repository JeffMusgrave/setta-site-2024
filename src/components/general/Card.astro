---
import ThemeImage from "../ThemeImage.astro";

interface Props {
  lightImage?: ImageMetadata;
  darkImage?: ImageMetadata;
  alt?: string;
  href?: string;
  videoSrc?: string;
  isVideo?: boolean;
  controls?: boolean;
  autoplay?: boolean;
  muted?: boolean;
  loop?: boolean;
  playsInline?: boolean;
  width?: string;
}

const {
  lightImage, 
  darkImage, 
  alt, 
  href,
  videoSrc,
  isVideo = false,
  controls,
  autoplay = false,
  muted = true,
  loop = false,
  playsInline = true,
  width = ""
} = Astro.props;

// bg-setta-900/80 -mx-7 px-7

const cardStyle = "group/card sm:rounded-xl !px-0 sm:!px-4 md:mx-0 bg-setta-875 md:border-white first:border-t border-b dark:border-setta-700 sm:border md:dark:border-setta-700 md:bg-white md:dark:bg-setta-860 md:dark:shadow-setta-900/50 border-setta-700 md:shadow-xl md:dark:focus:shadow-[0_35px_60px_-15px_rgba(0,0,0,0.7)] sm:outline sm:outline-4 transition-all scroll-reveal"
---
<div class:list={[cardStyle, width, "w-full flex flex-col items-center md:flex-row py-6 md:py-2 px-5 md:gap-5 max-w-4xl"]}>
  <div class="w-[clamp(280px,_90vw,_1140px)] sm:w-full md:w-auto mt-2 px-2 mb-3 prose lg:prose-xl text-setta-700 dark:!text-setta-200 
   md:bg-transparent py-1 
   setta-scroll self-center flex-1">
    <header class="flex w-full items-center gap-4 -ml-2 lg:-ml-0.5">
      <slot name="icon" />
      {href ?  
        <a href={href}>
          <h4 class="!my-0 pb-2 md:pb-4 text-4xl  lg:text-4xl font-normal tracking-tight text-setta-900 dark:!text-setta-100 md:dark:!text-setta-200">
            <slot name="title" />
          </h4>
        </a> :       
        <h4 class="!my-0 pb-2 md:py-4 text-3xl  lg:text-4xl font-normal tracking-tight text-setta-900 dark:!text-setta-200">
          <slot name="title" />
        </h4>
      }
    </header>
    <aside class="hidden md:block  [&_*]:!text-setta-300">
      <slot name="body" />
    </aside>
    
  </div>
  <div class="flex flex-col md:py-3 gap-0 w-[clamp(280px,_90vw,_1140px)] sm:w-auto" tabindex="1">


    {isVideo ? (
      <div class="z-10 border border-solid border-setta-700 shadow-2xl md:shadow-none shadow-setta-950/70 rounded-lg overflow-hidden [&_*]:!my-0 md:!max-w-72 lg:!max-w-96">
        <video
          class="w-full h-auto"
          {autoplay}
          {muted}
          {loop}
          playsinline={playsInline}
        >
          <source src={videoSrc} type="video/mp4">
          Your browser does not support the video tag.
        </video>
      </div>
    ) : (
      (lightImage || darkImage) && (
        <a href="#" class="border border-setta-800 rounded-lg overflow-hidden mt-2">
          <ThemeImage class="[&_*]:!mt-0 [&_*]:!mb-0" lightImage={lightImage} darkImage={darkImage} alt={alt} />
        </a>
      )
    )}


    
    {href && 
      <a href="#" class="inline-flex items-center py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
        Read more
        <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
      </a>
    }
    <aside class="block md:hidden mt-5 px-2 py-1 mb-4 prose [&_*]:!text-setta-200"><slot name="body" /></aside>
  </div>


</div>

<style>
@keyframes outline-reveal {
  0%, 25% {
    outline-color: transparent;
    box-shadow: var(--tw-shadow);
    }
  38% {
    outline-color: rgb(34 211 238); /* cyan-400 */
    box-shadow: var(--tw-shadow);
  }
  40% {
    outline-color: rgb(37 99 235); /* blue-600 */
    box-shadow: var(--tw-shadow-2xl);
  }
  50% {
    outline-color: rgb(37 99 235);
    box-shadow: var(--tw-shadow-2xl);
  }
  70% {
    outline-color: transparent;
    box-shadow: var(--tw-shadow);
  }
}

.scroll-reveal {
  animation-timeline: view();
  animation-name: outline-reveal;
  animation-duration: 1s;
  animation-timing-function: linear;
  animation-fill-mode: both;
  animation-range: entry 0% center, center exit;
  animation-direction: normal, reverse;
  outline-color: transparent;
}

</style>


