---
import Section from "./sections/Section.astro";
import { Rocket } from 'lucide-astro';
---

<Section outerClass="relative py-12 md:py-16 bg-setta-860" >
  <div class="flex flex-col justify-center items-center text-center max-w-2xl mx-auto">
    <div class="bg-setta-900/70 border border-setta-700 rounded-xl p-8 shadow-lg backdrop-blur-sm">
      <div class="flex flex-col items-center gap-3">
        <Rocket size={42} class="text-blue-500" />
        <h2 class="!text-3xl md:!text-4xl !text-setta-500 m-0 font-black uppercase">Check back soon!</h2>
      </div>
      <p class="text-xl text-setta-300">We're currently making some important changes to Setta. We'll be back soon!</p>
      
      <div class="mt-8 flex justify-center space-x-2">
        <div class="relative">
          <div class="w-3 h-3 bg-blue-500 rounded-full animate-ping absolute"></div>
          <div class="w-3 h-3 bg-blue-500 rounded-full relative"></div>
        </div>
        <div class="relative">
          <div class="w-3 h-3 bg-blue-500 rounded-full animate-ping absolute" style="animation-delay: 0.3s"></div>
          <div class="w-3 h-3 bg-blue-500 rounded-full relative"></div>
        </div>
        <div class="relative">
          <div class="w-3 h-3 bg-blue-500 rounded-full animate-ping absolute" style="animation-delay: 0.6s"></div>
          <div class="w-3 h-3 bg-blue-500 rounded-full relative"></div>
        </div>
      </div>
    </div>
  </div>
</Section>