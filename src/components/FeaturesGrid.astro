---
import Card from "./general/Card.astro";
import Section from "./sections/Section.astro";
import { Copy, Monitor, Code, Terminal, BookOpenText, WandSparkles, SquarePlay } from 'lucide-astro';

// Import content
import FlexibleUi from "../snippets/home/flexible-ui.md"
import BuiltForDevs from "../snippets/home/built-for-devs.md"
import PowerfulConfigs from "../snippets/home/powerful-config.md"
import IntegratedDocs from "../snippets/home/integrated-docs.md"
import LongRun from "../snippets/home/long-run.md"
import RealTime from "../snippets/home/real-time.md"

const features = [
  {
    icon: Code,
    title: "Built for Devs",
    content: BuiltForDevs,
    video: "/assets/video/built-for-devs.mp4"
  },
  {
    icon: WandSparkles,
    title: "Powerful Config Management",
    content: PowerfulConfigs,
    video: "/assets/video/complex-configs.mp4"
  },
  {
    icon: BookOpenText,
    title: "Customizable, Integrated Documentation",
    content: IntegratedDocs,
    video: "/assets/video/in-project-docs.mp4"
  },
  {
    icon: Monitor,
    title: "Flexible UI",
    content: FlexibleUi,
    video: "/assets/video/clean-ui.mp4"
  },
  {
    icon: Terminal,
    title: "Monitor Long Running Scripts",
    content: LongRun,
    video: "/assets/video/training-run.mp4"
  },
  {
    icon: SquarePlay,
    title: "Interact In Real-Time",
    content: RealTime,
    video: "/assets/video/interactive-example.mp4"
  }
];



const iconClass = "min-w-6 mb-1 md:my-0 [&_*]:!text-setta-600 group-hover/card:[&_*]:!text-blue-600 [&_*]:transition-colors"

---

<Section customSiteWidth="sm:w-[clamp(280px,_90vw,_1140px)]" outerClass="pt-32 md:pt-48 sm:pb-16 md:pb-24 pattern" innerClass="mx-auto">
  <h2 class="mx-auto mb-4 md:mb-8 text-4xl md:!text-6xl text-center text-setta-200 !font-medium">
    Why Setta Is Betta
  </h2>

  <aside class="flex flex-col items-center flex-wrap sm:gap-10 md:gap-20 md:[&>*:nth-child(even)]:!flex-row-reverse">
    {features.map(({ icon: Icon, title, content: Content, video }) => (
      <Card 
        isVideo={true}
        videoSrc={video}
        controls={false}
        muted
        autoplay
        loop={true}
      >
        <Icon slot="icon" class={iconClass} />
        <Fragment slot="title">{title}</Fragment>
        <Fragment slot="body"><Content /></Fragment>
      </Card>
    ))}
  </aside>
</Section>
