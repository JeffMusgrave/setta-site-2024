---
import Section from "./sections/Section.astro";

const features = [
  "TypeScript", "Server-side Rendering", "Zero JavaScript", "Edge-ready", 
  "Partial Hydration", "Island Architecture", "File-based Routing", 
  "Component Islands", "Hot Module Reloading", "Asset Optimization", 
  "Image Optimization", "Markdown Support", "MDX Integration", 
  "Dynamic Imports", "SEO Friendly", "Build Optimization", 
  "Static Site Generation", "Incremental Builds", "Fast Refresh", 
  "Dev Tooling", "Content Collections", "Data Fetching", 
  "API Routes", "Middleware Support", "ViewTransitions API", 
  "CSS Modules", "Scoped Styles", "Framework Agnostic", 
  "Multi-framework", "React Integration", "Vue Support", 
  "Svelte Components", "Preact Support", "Solid.js Ready", 
  "RSS Feeds", "Sitemap Generation", "i18n Support", 
  "Environment Variables", "Dynamic Routes", "Nested Layouts", 
  "Error Boundaries", "Development Server", "Production Builds",
  "Code Splitting", "Tree Shaking", "Bundle Analysis",
  "Cache Control", "Asset Handling", "HTML Minification",
  "Web Workers", "Service Workers", "PWA Support",
  "GraphQL", "REST API", "WebSocket",
  "Authentication", "Authorization", "Security Headers",
  "Performance Metrics", "Accessibility", "Core Web Vitals"
];
---

<Section>
  <div class="w-full mx-auto h-[500px] overflow-hidden ">
    <h2 class="prose-h2 text-center">And more...</h2>
    <p class="text-lg leading-loose text-center">
      {features.map((feature, index) => (
        <>
          <span class="text-gray-800">
            {feature}
          </span>
          {index < features.length - 1 && (
            <span class="text-gray-400 mx-1.5">Â·</span>
          )}
        </>
      ))}
    </p>
    
    {/* Gradient fade overlay */}
    <div class="absolute inset-x-0 bottom-0 h-64 bg-gradient-to-t from-setta-dark via-setta-dark to-transparent" />
    
    {/* Roadmap button */}
    <div class="absolute bottom-16 left-1/2 -translate-x-1/2 z-10">
      <a 
        href="https://github.com/yourorg/yourproject/roadmap" 
        target="_blank" 
        rel="noopener noreferrer"
        class="inline-flex items-center px-6 py-3 bg-setta-900 text-white rounded-full hover:bg-blue-600 transition-colors shadow-lg hover:shadow-xl"
      >
        <span class=" mr-2">View Full Roadmap</span>
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          width="16" 
          height="16" 
          viewBox="0 0 24 24" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="2" 
          stroke-linecap="round" 
          stroke-linejoin="round" 
          class="lucide lucide-external-link"
        >
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
          <polyline points="15 3 21 3 21 9" />
          <line x1="10" y1="14" x2="21" y2="3" />
        </svg>
      </a>
    </div>
  </div>
</Section>
