---
const baseUrl = import.meta.env.PUBLIC_BASE_URL || "https://setta.dev";

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "@id": `${baseUrl}/#website`,
  "name": "Setta",
  "url": baseUrl,
  "description": "Streamline your code. Skip the boilerplate parsers and frontend. Effortlessly expose your Python functions as a flexible UI. Configure, interact, and share with ease.",
  "inLanguage": "en-US",
  "publisher": {
    "@type": "Organization",
    "@id": `${baseUrl}/#organization`,
    "name": "Setta",
    "url": baseUrl,
    "logo": {
      "@type": "ImageObject",
      "url": `${baseUrl}/assets/img/og-image.jpg`
    }
  }
};

const softwareSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "@id": `${baseUrl}/#software`,
  "name": "Setta",
  "applicationCategory": "DeveloperApplication",
  "operatingSystem": ["Windows", "macOS", "Linux"],
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD",
    "availability": "https://schema.org/InStock"
  },
  "description": "Streamline your code. Skip the boilerplate parsers and frontend. Effortlessly expose your Python functions as a flexible UI. Configure, interact, and share with ease.",
  "url": baseUrl,
  "softwareVersion": "1.0",
  "downloadUrl": "https://github.com/settadev/setta",
  "applicationSubCategory": "Configuration Management",
  "featureList": [
    "Version control for configurations",
    "Interactive UI/DX",
    "Parameter sweeps",
    "Documentation integration",
    "Git-friendly yaml export"
  ],
  "requirements": "Python 3.8+",
  "license": "https://www.apache.org/licenses/LICENSE-2.0",
  "author": {
    "@type": "Organization",
    "@id": `${baseUrl}/#organization`
  }
};
---
<>
  <title>Setta: Python Configuration Environment | Expose Functions As Flexible UI</title>
  <meta name="description" content="Streamline your code. Skip the boilerplate parsers and frontend. Effortlessly expose your Python functions as a flexible UI. Configure, interact, and share with ease." />
  <meta name="keywords" content="configuration management, developer tools, python, machine learning, UI/UX, DX, open source, foss," />
  <meta name="application-name" content="Setta" />
  <meta name="theme-color" content="#3B82F6" />
  <meta name="robots" content="index, follow" />
  <meta name="googlebot" content="index, follow" />
  
  <!-- Open Graph -->
  <meta property="og:url" content={baseUrl} />
  <meta property="og:type" content="website" />
  <meta property="og:title" content="Setta: Python Configuration Environment | Expose Functions As Flexible UI" />
  <meta property="og:description" content="Streamline your code. Skip the boilerplate parsers and frontend. Effortlessly expose your Python functions as a flexible UI. Configure, interact, and share with ease." />
  <meta property="og:image" content={`${baseUrl}/assets/img/og-image.jpg`} />
  <meta property="og:image:alt" content="Setta - Python Configuration Management Tool" />
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:site" content="@settadev" />
  <meta name="twitter:creator" content="@settadev" />
  <meta name="twitter:image" content={`${baseUrl}/assets/img/og-image.jpg`} />
  <meta name="twitter:image:alt" content="Setta - Python Configuration Management Tool" />
  
  <!-- Schema Scripts -->
  <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(softwareSchema)} />
</>
