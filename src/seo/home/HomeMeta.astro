  twitter: {
    card: "summary_large_image",
    site: "@settadev",
    creator: "@settadev",
    image: "https://setta.dev/assets/img/og-image.jpg",  // Add direct twitter image
    imageAlt: "Setta - Python Configuration Management Tool"
  },
  extend: {
    meta: [
      { name: "application-name", content: "Setta" },
      { name: "theme-color", content: "#3B82F6" },
      { name: "keywords", content: "configuration management, developer tools, python, machine learning, UI/DX, open source" },
