    "url": "https://setta.dev",
    "logo": {
      "@type": "ImageObject",
      "url": "https://setta.dev/assets/img/og-image.jpg"
    }
  }
};

const softwareSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
